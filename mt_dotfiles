#!/usr/bin/env shell
#
case $1 in

    install)
            cd $HOME/.dotfiles
            stow .
            mkdir $HOME/.local/bin
            ln -fsr mt_dotfiles $HOME/.local/bin/mt_dotfiles
            ;;

    update)
            cd $HOME/.dotfiles
            git fetch
            git pull
            stow .
            ;;

    upload)
            cd $HOME/.dotfiles
            git add .
            git commit -a -m "$2"
            git push
            ;;

esac
